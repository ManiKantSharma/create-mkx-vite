{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "Routes": ["./Routes"],
      "Components": ["./Components"],
      "Configs": ["./Configs"],
      "Layout": ["./Layout"],
      "Mock": ["./Mock"],
      "Pages": ["./Pages"],
      "Resources": ["./Resources"],
      "Schemas": ["./Schemas"],
      "Services": ["./Services"],
      "Authentication": ["./Authentication"],
      "NotFound": ["./NotFound"],
      "Router": ["./Router"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
